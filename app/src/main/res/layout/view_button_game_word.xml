<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_game_word_result"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignTop="@id/cv_game_word_border"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/tv_game_word_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignTop="@+id/iv_game_word_result"
                android:layout_alignBottom="@+id/iv_game_word_result"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/iv_game_word_result"/>

            <ImageView
                android:id="@+id/iv_game_word_result"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_game_word_border"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        style="?attr/background_card_accent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_game_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:elevation="0dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/rl_game_word_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <TextView
                    android:id="@+id/tv_game_word_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    style="?attr/text_accent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_margin="8dp"
                    android:layout_centerInParent="true"
                    android:gravity="center" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>