<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/swipeable_background_item_closed"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_toStartOf="@+id/card_edit"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <include
            android:id="@+id/inc_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_language"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/swipeable_background_delete"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_swipeable_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/card_delete"
        android:background="@drawable/swipeable_background_edit"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_swipeable_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:visibility="gone"/>

    </RelativeLayout>





</RelativeLayout>
