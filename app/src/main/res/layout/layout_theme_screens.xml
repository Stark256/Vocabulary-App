<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:layout_constraintTop_toBottomOf="@+id/abr_settings"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?attr/background_gradient_left">

            <View
                android:id="@+id/ex_view_toolbar_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?attr/background_accent"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/ex_view_word_1"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_below="@+id/ex_view_toolbar_1"
                android:background="@drawable/swipeable_background_item_closed"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/ex_text_size_t"
                android:text="@string/ex_word_1"
                android:paddingStart="4dp"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/ex_view_word_2"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:orientation="horizontal"
                android:layout_below="@+id/ex_view_word_1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/swipeable_background_item_opened"
                    android:textSize="@dimen/ex_text_size_t"
                    android:text="@string/ex_word_2"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/swipeable_background_edit"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/swipeable_background_delete"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ex_view_word_3"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_below="@+id/ex_view_word_2"
                android:background="@drawable/swipeable_background_item_closed"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/ex_text_size_t"
                android:text="@string/ex_word_3"
                android:paddingStart="4dp"
                android:gravity="center_vertical"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?attr/background_gradient_left">

            <View
                android:id="@+id/ex_view_toolbar_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?attr/background_accent"
                android:layout_alignParentTop="true"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_below="@+id/ex_view_toolbar_2"
                app:cardCornerRadius="8dp">

                <com.vocabulary.customViews.progress_square_view.SmallProgressSquareView
                    android:id="@+id/psv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?attr/background_gradient_left">

            <View
                android:id="@+id/ex_view_toolbar_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?attr/background_accent"
                android:layout_alignParentTop="true"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_below="@+id/ex_view_toolbar_3"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ex_cv_word_translation"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        style="?attr/background_card_accent"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ex_translation"
                            android:textSize="@dimen/ex_text_size_t"
                            android:textColor="@color/white"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ex_ll_words_cont_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ex_cv_word_translation">

                        <TextView
                            android:id="@+id/ex_view_g_w_1"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:background="@drawable/swipeable_background_item_closed"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:elevation="2dp"
                            android:textSize="@dimen/ex_text_size"
                            android:text="@string/ex_word_1"
                            android:layout_weight="1"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/ex_view_g_w_2"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:background="@drawable/swipeable_background_item_closed"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:elevation="2dp"
                            android:textSize="@dimen/ex_text_size"
                            android:text="@string/ex_word_2"
                            android:layout_weight="1"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ex_ll_words_cont_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ex_ll_words_cont_1">

                        <TextView
                            android:id="@+id/ex_view_g_w_3"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:background="@drawable/swipeable_background_item_closed"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:elevation="2dp"
                            android:textSize="@dimen/ex_text_size"
                            android:text="@string/ex_word_3"
                            android:layout_weight="1"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/ex_view_g_w_4"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:background="@drawable/swipeable_background_item_closed"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:elevation="2dp"
                            android:textSize="@dimen/ex_text_size"
                            android:text="@string/ex_word_4"
                            android:layout_weight="1"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?attr/background_gradient_left">

            <View
                android:id="@+id/ex_view_toolbar_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?attr/background_accent"
                android:layout_alignParentTop="true"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_below="@+id/ex_view_toolbar_4"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ex_cv_letter_translation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="?attr/background_card_accent"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/ex_tv_letter_translation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="@string/ex_translation"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ex_text_size_t" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ex_tv_letter_translation"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/swipeable_background_item_closed"
                                    android:elevation="2dp"
                                    android:gravity="center"
                                    android:text="@string/ex_letter_a"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/ex_text_size" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/swipeable_background_item_closed"
                                    android:elevation="2dp"
                                    android:gravity="center"
                                    android:text="@string/ex_letter_b"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/ex_text_size" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/swipeable_background_item_closed"
                                    android:elevation="2dp"
                                    android:gravity="center"
                                    android:text="@string/ex_letter_c"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/ex_text_size" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/swipeable_background_item_closed"
                                    android:elevation="2dp"
                                    android:gravity="center"
                                    android:text="@string/ex_letter_d"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/ex_text_size" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ex_cv_letter_translation"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/ex_letter_a"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/ex_text_size"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:elevation="2dp"
                            android:background="@drawable/swipeable_background_item_closed"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/ex_letter_b"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/ex_text_size"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:elevation="2dp"
                            android:background="@drawable/swipeable_background_item_closed"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/ex_letter_c"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/ex_text_size"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:elevation="2dp"
                            android:background="@drawable/swipeable_background_item_closed"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/ex_letter_d"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/ex_text_size"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:elevation="2dp"
                            android:background="@drawable/swipeable_background_item_closed"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>