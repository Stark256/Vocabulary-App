<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">
    <shape
        android:shape="ring"
        android:useLevel="false">
        <stroke android:color="@color/theme_sundown_accent_half"
            android:width="1dp" />
        <gradient
            android:centerColor="@color/theme_sundown_accent_half"

            android:endColor="@color/theme_sundown_accent"
            android:startColor="@color/transparent"
            android:type="sweep"
            android:centerY="0.5"
            android:useLevel="false" />

    </shape>

</rotate>
